<configs>
<append xpath="/entity_classes">	

<entity_class name="zombieJoeBoss" extends="zombieTemplateMale">
	<property name="Tags" value="entity,zombie,walker"/>
	<property name="Mesh" value="Zombies/zombieStandardJoeRagdoll"/>
	<property name="AvatarController" value="AvatarZombie01Controller"/>
	<property name="ModelType" value="Standard"/>
	<property name="WalkType" value="5"/>
	<property name="RootMotion" value="true"/>
	<property name="HasDeathAnim" value="true"/>
	<property name="TintMaterial2" value="79,40,26"/>

	<!-- Gameplay -->
	<effect_group name="Base Effects">
		<passive_effect name="HealthMax" operation="base_set" value="150"/>
		<passive_effect name="HealthMax" operation="perc_set" value="1"/> <!-- Zombie HP scale -->
    <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" target="self" buff="buffRage"/>
	</effect_group>
</entity_class>

</append>
</configs>
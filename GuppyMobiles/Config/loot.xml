<configs>

<insertBefore xpath="/lootcontainers/lootcontainer[@id='1']" >

    <lootgroup name="guppyVehicleRegularDamaged" count="1">
      <item name="damagedsmallEngine" count="1" prob=".2" />
      <item name="damagedcarCarburetor" count="1" prob=".2" />
      <item name="damagedcarSeats" count="1" prob=".2" />
      <item name="damagedcarBattery" count="1" prob=".2" />
      <item name="damagedcarTransmission" count="1" prob=".2" />
      <item name="damagedvehicleWheels" count="1" prob=".2" />
    </lootgroup>

    <lootgroup name="guppyVehicleRegularWorking" count="1">
      <item name="smallEngine" count="1" prob=".2" />
      <item name="carCarburetor" count="1" prob=".2" />
      <item name="carSeats" count="1" prob=".2" />
      <item name="carBattery" count="1" prob=".2" />
      <item name="carTransmission" count="1" prob=".2" />
      <item name="vehicleWheels" count="1" prob=".2" />
    </lootgroup>

    <lootgroup name="guppyVehicleMedical" count="1">
      <item group="guppyVehicleRegularDamaged" count="1" />
      <item group="guppyVehicleRegularWorking" prob=".2" />
      <item group="rareMedicine" count="1" prob=".2" />
      <item group="medicine" count="1" prob=".2" />
      <item group="cannedfood" count="1" prob=".1" />  
    </lootgroup>

    <lootgroup name="guppyVehicleLawMil" count="1">
      <item group="sportingGoods" prob=".2" />
      <item group="militaryArmor" prob=".2" />
      <item group="weaponsMilitaryGuns+ammo" prob=".2" />
      <item group="militaryAmmo" count="1" prob=".2" />
      <item name="resourceMilitaryFiber" count="1,5" prob=".2" />
      <item group="modAllT1" prob=".2" />
      <item group="modAllT2" prob=".2" />
      <item group="modAllT3" prob=".2" />
      <item group="cannedfood" prob=".3" />
    </lootgroup>
</insertBefore>

<insertAfter xpath="/lootcontainers/lootgroup[@name='automotive']" >
  <item name="guppyToolRachetSet" count="1,2"/>
  <item name="guppyToolCompressor" count="1" prob="0.1"/>
</insertAfter>

<append xpath="/lootcontainers">

      <!--Vehicle Blocks -->
      <lootcontainer id="170" count="1" size="6,4" destroy_on_close="true" sound_open="UseActions/open_backpack" sound_close="UseActions/close_backpack" open_time="1" loot_quality_template="baseTemplate">
        <item group="guppyVehicleRegularDamaged" prob=".4" />
        <item group="guppyVehicleRegularWorking" prob=".2" />    
      </lootcontainer>
      <!--EMS Vehicle Blocks -->
      <lootcontainer id="171" count="2" size="6,4" destroy_on_close="true" sound_open="UseActions/open_backpack" sound_close="UseActions/close_backpack" open_time="1" loot_quality_template="baseTemplate">
        <item group="guppyVehicleRegularDamaged" prob=".4" />
        <item group="guppyVehicleRegularWorking" prob=".2" />  
        <item group="guppyVehicleMedical" prob=".4" />
      </lootcontainer>
      <!--Police/Military Vehicle Blocks -->
      <lootcontainer id="172" count="1" size="6,4" destroy_on_close="true" sound_open="UseActions/open_backpack" sound_close="UseActions/close_backpack" open_time="1" loot_quality_template="baseTemplate">
        <item group="guppyVehicleRegularDamaged" prob=".4" />
        <item group="guppyVehicleRegularWorking" prob=".2" /> 
        <item group="guppyVehicleLawMil" prob=".4" />      
      </lootcontainer> 
      <!--Damaged Vehicle Blocks -->
      <lootcontainer id="173" count="4" size="6,4" destroy_on_close="true" sound_open="UseActions/open_backpack" sound_close="UseActions/close_backpack" open_time="1" loot_quality_template="baseTemplate">
        <item name="carChassis" count="1"  prob="1" /> 
        <item name="resourceLeather" count="2,7" prob="0.5" />
        <item name="resourceScrapIron" count="10,20" /> 
        <item name="resourceHeadlight" count="1,2" prob="0.2" /> 
        <item name="resourceMechanicalParts" count="0,2" prob="0.1" /> 
        <item name="resourceElectricParts" count="0,2" prob="0.1" /> 
        <item name="resourceElectricParts" count="0,2" prob="0.1" /> 
        <item name="resourceRadiator" count="1" prob="0.5" />
        <item name="resourceOil" count="1,3" prob="0.5" />
        <item name="resourceCloth" count="3,7" />
        <item name="resourceSpring" count="2,4" />
        <item name="ammoGasCan" count="2,12" />
      </lootcontainer>       
    
</append>

</configs>